<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/gitfondo2"
    android:elevation="10dp">

    <TextView
        android:id="@+id/nombre_repo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:ellipsize="marquee"
        android:focusable="false"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.125"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="nombreRepo" />

    <ImageView
        android:id="@+id/imagen_estrella"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/nombre_repo"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/cantidad_estrellas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombre_repo"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/imagen_estrella"
        android:textSize="16sp"
        android:textStyle="italic|bold" />
</RelativeLayout>